		"react-hook-form": "^7.54.2",
		"socket.io": "^4.8.1",
		"socket.io-client": "^4.8.1",
		"sonner": "^2.0.3",
		"tailwind-merge": "^3.0.2",
		"tailwindcss": "^4.1.3",
		"tailwindcss-animate": "^1.0.7",
		"uuid": "^11.1.0",
		"vite-tsconfig-paths": "^5.1.4",
		"zod": "^3.24.2"
	},
	"devDependencies": {
