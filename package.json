{
	"name": "chatroom",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "concurrently \"npm run app\" \"npm run server\"",
		"build": "tsc -b && npm run build:app && npm run build:server",
		"lint": "eslint .",
		"app": "env-cmd -f .env sh -c 'vite --port $APP_PORT --config vite.app.config.ts --open'",
		"server": "nodemon --watch src/server --ext ts --exit --exec 'vite-node --config vite.server.config.ts src/server/server.ts' -- \"$@\"",
		"build:app": "vite build --config vite.app.config.ts",
		"build:server": "vite build --config vite.server.config.ts"
	},
	"dependencies": {
		"@anthropic-ai/sdk": "^0.39.0",
		"@hookform/resolvers": "^4.1.3",
		"@langchain/openai": "^0.5.5",
		"@radix-ui/react-alert-dialog": "^1.1.6",
		"@radix-ui/react-avatar": "^1.1.3",
		"@radix-ui/react-checkbox": "^1.1.4",
		"@radix-ui/react-collapsible": "^1.1.3",
		"@radix-ui/react-dialog": "^1.1.6",
		"@radix-ui/react-dropdown-menu": "^2.1.6",
		"@radix-ui/react-label": "^2.1.2",
		"@radix-ui/react-popover": "^1.1.6",
		"@radix-ui/react-scroll-area": "^1.2.5",
		"@radix-ui/react-select": "^2.1.6",
		"@radix-ui/react-separator": "^1.1.2",
		"@radix-ui/react-slot": "^1.1.2",
		"@radix-ui/react-switch": "^1.1.3",
		"@radix-ui/react-tabs": "^1.1.3",
		"@radix-ui/react-toggle": "^1.1.2",
		"@radix-ui/react-toggle-group": "^1.1.2",
		"@radix-ui/react-tooltip": "^1.1.8",
		"@tailwindcss/vite": "^4.1.2",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"concurrently": "^9.0.0",
		"cors": "^2.8.5",
		"date-fns": "^3.6.0",
		"dotenv": "^16.5.0",
		"env-cmd": "^10.1.0",
		"express": "^5.1.0",
		"framer-motion": "^12.12.1",
		"langchain": "^0.3.21",
		"lucide-react": "^0.483.0",
		"next-themes": "^0.4.6",
		"openai": "^4.93.0",
		"react": "^19.0.0",
