{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "dist",
		"target": "ES2020",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/server/**/*", "src/lib/**/*", "src/shared/**/*"]
}
